<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.bluzwong.learn_rx"
        >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:name=".BaseApplication"
            >
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".TestGroovy"
                android:label="@string/title_activity_test_groovy"
                >
        </activity>
        <activity android:name=".NotificationActivity">
        </activity>
        <activity
                android:name=".touch.TouchActivity"
                android:label="@string/title_activity_touch"
                android:theme="@style/AppTheme.NoActionBar"
                >
        </activity>
        <activity android:name=".CustomViewActivity">
        </activity>
        <activity android:name=".customviews.ViewDragActivity">
        </activity>
    </application>

</manifest>
